{
    "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
    "version": 1,
    "newProjectRoot": "projects",
    "projects": {
        "MLDS-ui": {
            "projectType": "application",
            "schematics": {
                "@schematics/angular:component": {
                    "style": "scss"
                }
            },
            "root": "",
            "sourceRoot": "src",
            "prefix": "app",
            "architect": {
                "build": {
                    "builder": "@angular/build:application",
                    "options": {
                        "outputPath": "dist/MLDS-ui",
                        "index": "src/index.html",
                        "tsConfig": "tsconfig.app.json",
                        "inlineStyleLanguage": "scss",
                        "assets": [
                            "src/favicon.ico",
                            "src/favicon_grey.ico",
                            "src/favicon_red.ico",
                            "src/favicon_green.ico",
                            "src/favicon_yellow.ico",
                            "src/assets"
                        ],
                        "styles": [
                            "@angular/material/prebuilt-themes/indigo-pink.css",
                            "bootstrap/dist/css/bootstrap.min.css",
                            "@fortawesome/fontawesome-free/css/all.css",
                            "src/styles.scss"
                        ],
                        "scripts": [
                            "@popperjs/core/dist/umd/popper.min.js",
                            "bootstrap/dist/js/bootstrap.min.js"
                        ],
                        "browser": "src/main.ts",
                        "allowedCommonJsDependencies": [
                            "jquery",
                            "moment",
                            "file-saver",
                            "lodash",
                            "google-libphonenumber"
                        ]
                    },
                    "configurations": {
                        "production": {
                            "baseHref": "/",
                            "budgets": [
                                {
                                    "type": "initial",
                                    "maximumWarning": "3mb",
                                    "maximumError": "3.5mb"
                                },
                                {
                                    "type": "anyComponentStyle",
                                    "maximumWarning": "250kb",
                                    "maximumError": "300kb"
                                }
                            ],
                            "outputHashing": "all"
                        },
                        "development": {
                            "optimization": false,
                            "extractLicenses": false,
                            "sourceMap": true,
                            "namedChunks": true
                        }
                    },
                    "defaultConfiguration": "production"
                },
                "serve": {
                    "builder": "@angular/build:dev-server",
                    "options": {
                        "liveReload": false
                    },
                    "configurations": {
                        "production": {
                            "buildTarget": "MLDS-ui:build:production"
                        },
                        "development": {
                            "buildTarget": "MLDS-ui:build:development"
                        }
                    },
                    "defaultConfiguration": "development"
                },
                "extract-i18n": {
                    "builder": "@angular/build:extract-i18n",
                    "options": {
                        "buildTarget": "MLDS-ui:build"
                    }
                }
            }
        }
    }
}
